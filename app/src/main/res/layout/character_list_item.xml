<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.nixbyte.rickandmortymvvm.model.api.domain.Character" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick='@{(view) -> model.onItemClick.invoke(view)}'
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            app:url='@{model.image}'
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

        <TextView
            android:id="@+id/character_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.name}"

            app:layout_constraintTop_toTopOf="@+id/image"
            app:layout_constraintBottom_toTopOf="@+id/character_gender"
            app:layout_constraintLeft_toRightOf="@+id/image"/>

        <TextView
            android:id="@+id/character_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_constraintLeft_toRightOf="@+id/character_name_layout"
            app:layout_constraintBottom_toTopOf="@+id/character_gender"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/character_gender_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.gender}"

            app:layout_constraintBottom_toTopOf="@+id/character_species"
            app:layout_constraintLeft_toRightOf="@+id/image"/>

        <TextView
            android:id="@+id/character_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            app:layout_constraintBottom_toTopOf="@+id/character_species"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/character_species_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.species}"
            app:layout_constraintTop_toBottomOf="@+id/character_gender_layout"
            app:layout_constraintLeft_toRightOf="@+id/image"/>

        <TextView
            android:id="@+id/character_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species"
            app:layout_constraintTop_toBottomOf="@+id/character_gender"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/character_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.status}"
            app:layout_constraintTop_toBottomOf="@+id/character_species_layout"
            app:layout_constraintLeft_toRightOf="@+id/image"/>

        <TextView
            android:id="@+id/character_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            app:layout_constraintTop_toBottomOf="@+id/character_species"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>